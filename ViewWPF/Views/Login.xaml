<Window x:Class="ViewWPF.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewWPF.Views"
        mc:Ignorable="d"
        Title="Login" Height="320.301" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Column="1"
            Grid.Row="1"
            VerticalAlignment="Center">
            <Image Name="imgBatman" Source="/Images/batmanMask.png" />
            <TextBlock Name="lblLogin" Text="Login" />
            <TextBox Name="txtLogin"/>
            <TextBlock Name="lblSenha" Text="Senha"/>
            <PasswordBox Name="txtSenha"/>
            <Button Name="btnLogar" Content="Entrar" Click="btnLogar_Click"/>
        </StackPanel>
    </Grid>
</Window>
